<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
    }
    .events-container {
        width: 60%;
        margin: 0 auto;
    }
    .events {
        padding: 20px;
        margin: 8px 0;
        border-left: 5px solid #ccc;
        text-align: left;
        font-size: 1.2em;
        background-color: #ffcccb;
    }
    .events:nth-of-type(odd) {
        background-color: #ffcccb;
    }
    .events:nth-of-type(even) {
        background-color: #90ee90;
    }
    #unregister {
        background-color: #116638;
        color: white;
        padding: 10px 20px;
        margin-top: 20px;
        border: none;
        cursor: pointer;
        font-size: 1.2em;
    }
    #unregister:hover {
        opacity: 0.8;
    }
    #unregister {
      background-color: #116638;
      padding: 5px;
      color: white;
      margin-top: 20px;
    }
</style>
<div>
    Events and Workshops you have registered for:
</div>
{{#each events}}
<div class="events">
    {{this.name}}
</div>
<form method="POST" action="/unregister">
    <input type="hidden" name="eventId" value={{this._id}}>
    <input type="submit" id="unregister" value="Unregister">
</form>
{{/each}}