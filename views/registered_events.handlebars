<div class="events-container">
    <h2>Events and Workshops you have registered for:</h2>
    {{#each events}}
    <div class="events">
        {{this.name}}
        <form method="POST" action="/unregister">
            <input type="hidden" name="eventId" value="{{this._id}}">
            <input type="submit" class="unregister-button" value="Unregister">
        </form>
    </div>
    {{/each}}
</div>