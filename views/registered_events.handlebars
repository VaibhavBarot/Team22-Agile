<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        color: #333;
        padding-top: 30px;
        margin-bottom: 20px;

    }

    .events-container {
        width: 60%;
        margin: 0 auto;
        padding-bottom: 20px;

    }

    .events {
        padding: 20px;
        margin: 8px 0;
        border-radius: 5px;
        border-left: 5px solid #4CAF50;
        text-align: left;
        font-size: 1.2em;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        background-color: #ffcccb;
    }

    .events:nth-of-type(odd) {
        background-color: #ffcccb;
    }

    .events:nth-of-type(even) {
        background-color: #90ee90;

    }

    .unregister-button {
        background-color: #116638;
        color: white;
        padding: 10px 20px;
        margin-top: 10px;
        border: none;
        cursor: pointer;
        font-size: 1em;
        border-radius: 4px;
        transition: background-color 0.2s ease-in-out;
        display: inline-block;
    }

    .unregister-button:hover {
        background-color: #0e5529;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);

    }

    .events form {
        text-align: center;
    }
</style>


