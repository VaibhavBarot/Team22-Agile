<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        color: #333;
        padding-top: 30px;
        margin-bottom: 20px;

    }
    .events-container {
        width: 60%;
        margin: 0 auto;
    }
    .events {
        padding: 20px;
        margin: 8px 0;
        border-left: 5px solid #ccc;
        text-align: left;
        font-size: 1.2em;
        background-color: #ffcccb;
    }
    .events:nth-of-type(odd) {
        background-color: #ffcccb;
    }
    .events:nth-of-type(even) {
        background-color: #90ee90;
    }
    .unregister-button {
        background-color: #116638;
        color: white;
        padding: 10px 20px;
        margin-top: 20px;
        border: none;
        cursor: pointer;
        font-size: 1.2em;
        display: block;
        margin: 0 auto; /* This will center the button horizontally */
        text-align: center;
        
    }
    .unregister-button:hover {
        opacity: 0.8;
    }
    
  .events-container {
        width: 60%;
        margin: 0 auto;
        padding-bottom: 20px;

    }

    .hosted-event-button{
       background-color: #116638;
        color: white;
        padding: 10px 20px;
        margin-top: 20px;
        border: none;
        cursor: pointer;
        font-size: 1.2em;
        display: block;
        margin: 0 auto; /* This will center the button horizontally */
        text-align: center; 
    }

    .hosted-event-button:hover{
        opacity: 0.8;
    }

</style>

<body>
<h2>
    Events and Workshops you are hosting:
</h2>
<div class="events-container">
 {{#each events}}
        <div class="events"> Workshop : {{this.name }} <br /> Date : {{this.date}} <br /></a>
        <input type="submit" id="removepost" class="unregister-button" value="Cancel Event"></div>
        <form method="POST" action="/removepost">
    <input type="hidden" name="eventId" value={{this._id}}>
    
</form>
<br><br>
    {{/each}}
        <div class="event-request">
            <form action="/create-event">
                <button type="submit" class="hosted-event-button">Click here to create an event!</button>
            </form>
        </div>
    </div>
</div>
</body>
